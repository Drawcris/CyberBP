@page
@model TripsS.Areas.Identity.Pages.Account.ChangePasswordModel
@inject IConfiguration configuration
@{
    var siteKey = configuration["ReCaptcha:SiteKey"];
}

<script type="text/javascript">
    var onloadCallback = function () {
        grecapatcha.render('html_element', {
            'sitekey': '@siteKey'
        });
    };

    function onSubmit(event) {
        var token = grecapatcha.getResponse();
        document.getElementById('recapatchaTokenInputId').value = token;
    }
</script>

<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
        async defer>
</script>

<h2>Change Passwords</h2>

<form method="post" onsubmit="onSubmit(event)">
    <input type="hidden" id="recapatchaTokenInputId" asp-for="RecapatchaToken" />>
    <div class="form-group">
        <label for="CurrentPassword">Current Password</label>
        <input type="password" id="CurrentPassword" name="CurrentPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="NewPassword">New Password</label>
        <input type="password" id="NewPassword" name="NewPassword" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="ConfirmPassword">Confirm New Password</label>
        <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" required />
    </div>

    <div class="row mb-3"
      <div class="offset-sm-4 col-sm-8"
      <div id="html_element">
        </div>
        </div>
        </div>

    <button type="submit" class="btn btn-primary">Change Password</button>
</form>
